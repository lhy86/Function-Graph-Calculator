    </div>

    <script>






        // ä¸»é¢˜åˆ‡æ¢åŠŸèƒ½
        const themeToggle = document.getElementById('themeToggle');
        const root = document.documentElement;
        
        // è·å–ç³»ç»Ÿä¸»é¢˜åå¥½
        const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
        
        // ä»æœ¬åœ°å­˜å‚¨è·å–ç”¨æˆ·ä¸»é¢˜è®¾ç½®
        const savedTheme = localStorage.getItem('theme') || 'auto';
        root.setAttribute('data-theme', savedTheme);
        
        // æ›´æ–°ä¸»é¢˜å›¾æ ‡
        function updateThemeIcon() {
            const currentTheme = root.getAttribute('data-theme');
            themeToggle.textContent = currentTheme === 'dark' ? 'ğŸŒ™' : 
                                    currentTheme === 'light' ? 'â˜€ï¸' : 'ğŸŒ“';
        }
        
        // åˆ‡æ¢ä¸»é¢˜
        function toggleTheme() {
            const currentTheme = root.getAttribute('data-theme');
            let newTheme;
            
            if (currentTheme === 'auto') {
                newTheme = 'light';
            } else if (currentTheme === 'light') {
                newTheme = 'dark';
            } else {
                newTheme = 'auto';
            }
            
            root.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon();
        }
        
        // ç›‘å¬ä¸»é¢˜åˆ‡æ¢æŒ‰é’®ç‚¹å‡»
        themeToggle.addEventListener('click', toggleTheme);
        
        // ç›‘å¬ç³»ç»Ÿä¸»é¢˜å˜åŒ–
        prefersDarkScheme.addListener((e) => {
            if (root.getAttribute('data-theme') === 'auto') {
                updateThemeIcon();
            }
        });
        // åˆå§‹åŒ–ä¸»é¢˜å›¾æ ‡
        updateThemeIcon();





        function addPoint() {
            const container = document.getElementById('points-container');
            const div = document.createElement('div');
            div.className = 'point-input';
            div.innerHTML = `
                <input type="number" step="any" placeholder="xåæ ‡">
                <input type="number" step="any" placeholder="yåæ ‡">
                <button class="delete-btn" onclick="removePoint(this)">åˆ é™¤</button>
            `;
            container.appendChild(div);
        }

        function removePoint(button) {
            const container = document.getElementById('points-container');
            if (container.children.length > 1) {
                button.parentElement.remove();
            }
        }

        function simplifyPolynomial(terms) {
            // åˆå¹¶åŒç±»é¡¹
            const combined = {};
            terms.forEach(term => {
                const power = term.power;
                if (combined[power]) {
                    combined[power] += term.coefficient;
                } else {
                    combined[power] = term.coefficient;
                }
            });

            // æ„å»ºå¤šé¡¹å¼å­—ç¬¦ä¸²
            const parts = [];
            Object.keys(combined)
                .sort((a, b) => b - a) // æŒ‰å¹‚æ¬¡é™åºæ’åˆ—
                .forEach(power => {
                    let coef = combined[power];
                    if (Math.abs(coef) < 1e-10) return; // å¿½ç•¥æ¥è¿‘0çš„ç³»æ•°
                    
                    coef = Math.round(coef * 100000000) / 100000000; // ä¿ç•™å°æ•°
                    let term = '';
                    
                    if (power === '0') {
                        term = coef.toString();
                    } else if (power === '1') {
                        term = coef === 1 ? 'x' : coef === -1 ? '-x' : coef + 'x';
                    } else {
                        term = coef === 1 ? 'x^' + power : 
                               coef === -1 ? '-x^' + power : 
                               coef + 'x^' + power;
                    }
                    
                    if (parts.length === 0) {
                        parts.push(term);
                    } else {
                        parts.push((coef >= 0 ? ' + ' : ' - ') + term.replace(/^-/, ''));
                    }
                });

            return parts.length > 0 ? parts.join('') : '0';
        }

        function calculate() {
            const pointInputs = document.querySelectorAll('.point-input');
            const points = [];
            const resultDiv = document.getElementById('result');

            // æ”¶é›†è¾“å…¥çš„ç‚¹
            for (const pointInput of pointInputs) {
                const inputs = pointInput.querySelectorAll('input');
                const x = parseFloat(inputs[0].value);
                const y = parseFloat(inputs[1].value);
                
                if (isNaN(x) || isNaN(y)) {
                    resultDiv.innerHTML = '<div class="error">è¯·å¡«å†™æ‰€æœ‰åæ ‡å€¼ï¼</div>';
                    return;
                }
                points.push({x, y});
            }

            // æ£€æŸ¥xåæ ‡æ˜¯å¦æœ‰é‡å¤
            const xValues = points.map(p => p.x);
            if (new Set(xValues).size !== points.length) {
                resultDiv.innerHTML = '<div class="error">xåæ ‡å€¼ä¸èƒ½é‡å¤ï¼</div>';
                return;
            }

            // è®¡ç®—æ‹‰æ ¼æœ—æ—¥æ’å€¼å¤šé¡¹å¼çš„ç³»æ•°
            const terms = [];
            for (let i = 0; i < points.length; i++) {
                let numerator = points[i].y;
                for (let j = 0; j < points.length; j++) {
                    if (i !== j) {
                        numerator /= (points[i].x - points[j].x);
                    }
                }

                // è®¡ç®—æ¯ä¸€é¡¹çš„ç³»æ•°
                const coefficients = new Array(points.length).fill(0);
                coefficients[0] = 1;
                for (let j = 0; j < points.length; j++) {
                    if (i !== j) {
                        for (let k = points.length - 1; k >= 0; k--) {
                            if (k > 0) {
                                coefficients[k] = coefficients[k - 1] - points[j].x * coefficients[k];
                            } else {
                                coefficients[k] = -points[j].x * coefficients[k];
                            }
                        }
                    }
                }

                // å°†æ¯ä¸€é¡¹æ·»åŠ åˆ°termsæ•°ç»„
                for (let power = 0; power < points.length; power++) {
                    terms.push({
                        coefficient: numerator * coefficients[power],
                        power: power
                    });
                }
            }

            // åŒ–ç®€å¹¶æ˜¾ç¤ºç»“æœ
            const simplified = simplifyPolynomial(terms);
            resultDiv.innerHTML = `<strong>æ‹‰æ ¼æœ—æ—¥æ’å€¼å¤šé¡¹å¼ï¼š</strong><br>f(x) = ${simplified}`;
        }

        // åˆå§‹æ·»åŠ ä¸€ä¸ªç‚¹
        addPoint();
    </script>
